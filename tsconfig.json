{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./assets/*"],
      "@mocks/*": ["./mocks/*"]
    },
    "strictNullChecks": true,
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "extends": "expo/tsconfig.base",
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  },
  "ignorePatterns": ["*.d.ts"]
}
